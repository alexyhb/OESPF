<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.CoursesDao">

    <select id="getCoursesInfoById" parameterType="int" resultType="Courses">
        SELECT *
        FROM esp_user
        WHERE id=#{id}
    </select>
    <select id="getCousesInfoByname" parameterType="String" resultType="Courses">
        SELECT password
        FROM esp_user
        WHERE user_name=#{username}
    </select>

    <insert id="setCourses" parameterType="Courses"  >
        insert into esp_user
        (user_name,password) value (#{usernname},#{password})
    </insert>
    <delete id="deleteCourses" parameterType="Courses">

    </delete>

</mapper>
