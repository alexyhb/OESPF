<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.UserDao">
    <resultMap id="BaseResultMap" type="com.pojo.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_name" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="findById" parameterType="int" resultType="User">
        SELECT *
        FROM esp_user
        WHERE id=#{id}
    </select>
    <select id="Login" parameterType="String" resultType="User">
        SELECT password
        FROM esp_user
        WHERE user_name=#{username}
    </select>
    <update id="changePsd">
        update esp_user
        SET password=#{password}
        WHERE user_name=#{username}
    </update>
    <insert id="Register" parameterType="String"  >
        insert into esp_user
        (user_name,password) value (#{usernname},#{password})
    </insert>
    <select id="getBalance" parameterType="String" resultType="User">
        SELECT balance
        FROM ESP_USER
        WHERE user_name=#{username}
    </select>
    <select id="getPoint" parameterType="String" resultType="User">
        SELECT reward_point
        FROM ESP_USER
        WHERE username=#{username}
    </select>
    <select id="getByUsername" resultType="java.lang.String">

    </select>

</mapper>
