<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.RechargeDao">

    <select id="findInfoByOrder" parameterType="int" resultType="Recharge">Q
        SELECT *
        FROM esp_user
        WHERE id=#{id}
    </select>
    <update id="cancelRecharge" parameterType="int" >
        SELECT password
        FROM esp_user
        WHERE user_name=#{username}
    </update>

    <insert id="addRecharge" parameterType="int"  >
        insert into esp_user
        (user_name,password) value (#{usernname},#{password})
    </insert>


</mapper>
