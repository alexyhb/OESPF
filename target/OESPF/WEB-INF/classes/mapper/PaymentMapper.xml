    <select id="getInfoById" parameterType="int" resultType="Payment">
        SELECT *
        FROM esp_user
        WHERE id=#{id}
    </select>

    <update id="changeStatus" parameterType="int" >
        update esp_user
        SET password=#{password}
        WHERE user_name=#{username}
    </update>
    <insert id="creatPayment" parameterType="Payment"  >
        insert into esp_user
        (user_name,password) value (#{usernname},#{password})
    </insert>
    <delete id="deletePayment" parameterType="String" >
        SELECT balance
        FROM ESP_USER
        WHERE user_name=#{username}
    </delete>


